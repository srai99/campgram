<p id="notice"><%= notice %></p>
<div class="field">
<p>
  <strong>Title:</strong>
  <%= @topic.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @topic.description %>
</p>
<% if topic.image? %>
    <%= link_to (image_tag topic.image.url(:medium), class:'img-responsive'), topic_path(topic) %>
<% end %>


<%= link_to 'Edit', edit_topic_path(@topic) %> |
<%= link_to 'Back', topics_path %>
